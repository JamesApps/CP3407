<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.junpeng.insulinpump.HomeFragment">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Home"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="BG/Level"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="120dp"
        android:src="@drawable/image_red_arrow_up"
        android:id="@+id/imageArrow1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignBottom="@+id/BGlevel"
        android:layout_alignEnd="@+id/textManualInjection" />

    <ImageView
    android:layout_width="70dp"
    android:layout_height="120dp"
    android:src="@drawable/image_red_arrow_up"
    android:id="@+id/imageArrow2"
        android:layout_alignBottom="@+id/BGlevel"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Pump:"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignTop="@+id/textManualInjection"
        android:layout_alignEnd="@+id/imageArrow2" />
        />
    <ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
        android:id="@+id/icon_battery"
    android:src="@drawable/ic_battery_life"
    android:layout_alignBottom="@+id/textView5"
    android:layout_toStartOf="@+id/BGlevel"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_signal"
        android:id="@+id/ic_signal"
        android:layout_alignTop="@+id/icon_battery"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/BGlevel"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_gravity="center_horizontal"
        android:text="\t\t\tmmol/l"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/ManualInjection"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:background="@drawable/ic_injection" />

    <Button
        android:id="@+id/textManualInjection"
        android:layout_width="98dp"
        android:layout_height="70dp"
        android:text="Manaual Injection"
        android:textSize="14dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ManualInjection" />
</RelativeLayout>