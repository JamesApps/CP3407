<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="1"
    tools:context="com.example.junpeng.insulinpump.Manual_injection_Fragment">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/InjectionSpeedbar"
        android:layout_toEndOf="@+id/textView"
        android:gravity="right"
        android:text="40u"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Manual Injection"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/InsulinQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Insulin quantity"
        android:textSize="32dp"
        android:layout_marginTop="80dp" />

    <SeekBar
        android:id="@+id/InjectionSpeedbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/InsulinQuantity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/InjectionSpeedseekbar"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:text="1s"
        android:textSize="16dp"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="1u"
        android:textSize="16dp"
        android:layout_alignBottom="@+id/InjectionSpeedbar"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Injection Speed"
        android:textSize="32dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView11"
        android:layout_marginStart="31dp" />


    <SeekBar
        android:id="@+id/InjectionSpeedseekbar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView3"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/InjectionSpeedseekbar"
        android:layout_toEndOf="@+id/textView"
        android:text="99S"
        android:textSize="16dp" />

    <Button
        android:id="@+id/Inject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inject"
        android:textSize="30dp"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    />

</RelativeLayout>